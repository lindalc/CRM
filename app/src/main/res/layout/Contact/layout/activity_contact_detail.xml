<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.os.crm.Contact.Activity.ContactDetail">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                app:layout_collapseMode="parallax"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="4dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/contact_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorAccent"/>
                <LinearLayout
                    android:id="@+id/contact_linear"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="25sp"
                        tools:text="姓名"
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginRight="4dp"
                            android:layout_marginEnd="4dp"
                            android:textSize="16sp"
                            tools:text="部门"
                            android:id="@+id/bumf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:textSize="16sp"
                            tools:text="职务"
                            android:id="@+id/viwu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:showDividers="middle"
            android:divider="@drawable/linearlayout_divider"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="移动电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/new_msg"
                    android:padding="12dp"
                    android:src="@mipmap/msg"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/new_call"
                    android:padding="12dp"
                    android:src="@mipmap/call"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:visibility="invisible"
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="座机电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/zoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/new_call_zoji"
                    android:padding="12dp"
                    android:src="@mipmap/call"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:visibility="invisible"
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="邮箱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/new_email"
                    android:padding="12dp"
                    android:src="@mipmap/msg"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:visibility="invisible"
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qq"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="QQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/qq_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wechat"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="微信"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/wechat_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_department"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="部门"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="公司"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="123458123546843"
                        android:id="@+id/company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:visibility="invisible"
                    android:contentDescription="@string/rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
