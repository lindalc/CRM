<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bj2">
        <TextView
            android:id="@+id/View4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="客户名称"
            android:textStyle="bold"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/kehumkig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/View4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_1"
            android:src="@drawable/lianxiren"
            />
        <TextView
            android:id="@+id/View4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_1"
            android:layout_toRightOf="@id/View4_3"
            android:text="联系人"/>
        <TextView
            android:id="@+id/lmxirf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/kehumkig"
            android:layout_below="@id/kehumkig" />
        <ImageView
            android:id="@+id/View4_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_3"
            android:src="@drawable/dianhua"
            />
        <TextView
            android:id="@+id/View4_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_3"
            android:layout_toRightOf="@id/View4_6"
            android:text="电话号码"/>
        <TextView
            android:id="@+id/dmhx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/kehumkig"
            android:layout_below="@id/lmxirf" />
        <ImageView
            android:id="@+id/View4_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_6"
            android:src="@drawable/dizhi"
            />
        <TextView
            android:id="@+id/View4_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_7"
            android:layout_toRightOf="@id/View4_9"
            android:text="客户地址"/>
        <TextView
            android:id="@+id/divi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/kehumkig"
            android:layout_below="@id/dmhx" />
        <ImageView
            android:id="@+id/View4_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_9"
            android:src="@drawable/chuangjianshijian"
            />
        <TextView
            android:id="@+id/View4_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View4_9"
            android:layout_toRightOf="@id/View4_12"
            android:text="创建时间"/>
        <TextView
            android:id="@+id/ilkmuijm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/kehumkig"
            android:layout_below="@id/divi" />
    </RelativeLayout>
</LinearLayout>