<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:showDividers="middle"
                android:divider="@drawable/linearlayout_divider_white"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/line_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:paddingTop="2dp"
                        android:id="@+id/dingdanbianhao_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:textSize="12sp"
                            android:id="@+id/dingdanbianhao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dingdanbianhao" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/hetongbianhao_l"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:textSize="12sp"
                                android:id="@+id/hetongbianhao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hetongbianhao" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:paddingTop="2dp"
                        android:id="@+id/yewuyuan_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:textSize="12sp"
                            android:id="@+id/yewuyuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/yewuyuan" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/line_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout
                                android:paddingTop="2dp"
                                android:id="@+id/kehumingcheng_l"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:textSize="12sp"
                                    android:id="@+id/kehumingcheng"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/kehumingcheng" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/kehudizhi_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:textSize="12sp"
                                android:id="@+id/kehudizhi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/dizhi" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/lianxiren_l"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:textSize="12sp"
                                android:id="@+id/lianxiren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/lianxiren" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/lianxirendianhua_l"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:textSize="12sp"
                                android:id="@+id/lianxirendianhua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/lianxirendianhua" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/line_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/deviceinfo" />
                    </LinearLayout>
                    <ListView
                        android:divider="@color/tab_normal_color"
                        android:id="@+id/deviceinfo"
                        android:dividerHeight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/line_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/shebeizongjia_l"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:textSize="12sp"
                                android:id="@+id/shebeizongjia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/shebeizongjia" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:visibility="gone"
                            android:paddingTop="2dp"
                            android:id="@+id/zhekou_l"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:textSize="12sp"
                                android:id="@+id/zhekou"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/zhekou" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:id="@+id/shuifou"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/shuifoushi"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:checked="true"
                                android:text="含税"/>
                            <RadioButton
                                android:id="@+id/shuifoufou"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="不含税"/>
                        </RadioGroup>
                            <android.support.design.widget.TextInputLayout
                                android:paddingTop="2dp"
                                android:id="@+id/tichengjine_l"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.TextInputEditText
                                    android:inputType="numberDecimal"
                                    android:textSize="12sp"
                                    android:id="@+id/ticheng"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ticheng" />
                            </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/zhibaojin_l"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:inputType="numberDecimal"
                                android:textSize="12sp"
                                android:id="@+id/zhibaojin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/zhibaojin" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:paddingTop="2dp"
                            android:id="@+id/zhibaojindaoqi_l"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:textSize="12sp"
                                android:id="@+id/zhibaojindaoqi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/vibcjbdcqiuijm" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:paddingTop="2dp"
                    android:id="@+id/qita_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:minLines="5"
                        android:textSize="12sp"
                        android:id="@+id/qita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="备注" />
                </android.support.design.widget.TextInputLayout>
                <com.example.os.crm.ui.widget.ChoosePic
                    android:id="@+id/choosepic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.example.os.crm.ui.widget.ChoosePic>
                <com.example.os.crm.ui.widget.ChooseContact
                    android:id="@+id/addshenpi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.example.os.crm.ui.widget.ChooseContact>
                <Button
                    android:id="@+id/tijndkdj"
                    android:text="@string/tijiaodingdan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp">
            <TextView
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:layout_gravity="center_vertical|end"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="提交"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="34dp"
                android:id="@+id/tijiaodingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_done_white_18pt_2x"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll02"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll01">
            <TextView
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="取消"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="34dp"
                android:id="@+id/quxiaotijiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_cancel_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll03"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll02">
            <TextView
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="添加客户资料"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="34dp"
                android:id="@+id/addnewkehu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_add_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll04"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll03">
            <TextView
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="添加设备信息"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="34dp"
                android:id="@+id/addnewdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_add_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll0"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll04">
            <TextView
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="添加合同资料"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="34dp"
                android:id="@+id/addnewhetong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_add_white"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        app:elevation="5dp"
        android:layout_gravity="bottom|end"/>
</android.support.design.widget.CoordinatorLayout>
