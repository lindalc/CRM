<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                tools:text="@string/dingdanbianhao"
                android:id="@+id/his_diandanbianhao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:padding="4dp"
                android:id="@+id/ufpi"
                tools:text="@string/yitsyi"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="4dp"
                android:id="@+id/wjvg"
                tools:text="@string/wjvg"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="4dp"
                android:id="@+id/wjig"
                tools:text="@string/wjig"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shebeizongjia"/>
            <TextView
                tools:text="test"
                android:gravity="end"
                android:id="@+id/his_diandanzonge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kehumingcheng"/>
            <TextView
                android:gravity="end"
                android:id="@+id/his_kehumingcheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yewuyuan_short"/>
            <TextView
                android:gravity="end"
                android:id="@+id/yewuyuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.xyz.step.FlowViewHorizontal
            android:id="@+id/stepview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>
    </LinearLayout>
</LinearLayout>
