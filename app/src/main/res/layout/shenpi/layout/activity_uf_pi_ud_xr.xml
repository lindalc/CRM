<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.os.crm.ui.activity.Approval_FilterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审批类型"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/dkdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"/>
                <CheckBox
                    android:id="@+id/hvkr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回款"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审批状态"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/tsyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已同意"/>
                <CheckBox
                    android:id="@+id/bohv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已驳回"/>
                <CheckBox
                    android:id="@+id/wwufpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未审批"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发起时间"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/shaixuan_starttime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="点击选择开始时间"/>
                <EditText
                    android:id="@+id/shaixuan_endtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="点击选择结束时间"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/qtdk"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
