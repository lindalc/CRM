<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.os.crm.ui.activity.HuiKuanWeiShenPiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="订单编号"/>
            <TextView
                android:id="@+id/huikuan_shenpi_dingdanbianhao"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="客户名称"/>
            <TextView
                android:id="@+id/huikuan_shenpi_kehumingcheng"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:text="业务姓名"/>
        <TextView
            android:id="@+id/huikuan_shenpi_yewuxingming"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="6"
            tools:text="订单编号"/>
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="货款总额"/>
            <TextView
                android:id="@+id/huikuan_shenpi_zongjia"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="未收货款"/>
            <TextView
                android:id="@+id/huikuan_shenpi_weishou"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="本次货款"/>
            <TextView
                android:id="@+id/huikuan_shenpi_benci"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="提交时间"/>
            <TextView
                android:id="@+id/huikuan_shenpi_riqi"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                tools:text="订单编号"/>
        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/huikuan_tongyi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="同意"/>
            <Button
                android:id="@+id/huikuan_foujue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="驳回"
                android:visibility="gone"/>
            <Button
                android:id="@+id/huikuan_fanhui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
