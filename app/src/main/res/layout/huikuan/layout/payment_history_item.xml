<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="8dp"
        android:background="@drawable/line_corner"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="@string/kehumingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kehumkig"
                tools:text="@string/kehumingcheng"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="回款金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hvkrjbee"
                tools:text="test"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="回款时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hvkrriqi"
                tools:text="2018-3-9"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="分解状态"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ffjpvltd"
                tools:text="2018-3-9"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.xyz.step.FlowViewHorizontal
            android:id="@+id/ufpilqig"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp' />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>